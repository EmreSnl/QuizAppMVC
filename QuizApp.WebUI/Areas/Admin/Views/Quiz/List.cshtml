@model List<QuizListViewModel>

<div>
    <div class="float-start">  <h2>Quizzes</h2>  </div>
    <div class="float-end"> <a asp-area="Admin" asp-controller="Quiz" asp-action="New" class="btn btn-primary">New Quiz</a> </div>

</div>

<div style="padding-top:75px">

    <table class="table table-striped">
        <thead>

            <tr>
                <th>Quiz</th>
                <th>Description</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.QuizText</td>
                    <td>@item.Description</td>
                    <td>
                        <a asp-area="Admin" asp-controller="Quiz" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Edit</a>
                        <a asp-area="Admin" asp-controller="Quiz" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }

        </tbody>



    </table>


</div>