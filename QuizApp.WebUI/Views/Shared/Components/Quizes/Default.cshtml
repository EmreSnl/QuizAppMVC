@model List<QuizViewModel>

<div class="list-group">

    <a asp-controller="Home" asp-action="Index" asp-route-categoryId="" asp-route-categoryName="" class="fw-bold list-group-item">All Quizzes</a>

    @foreach (var item in Model)
    {
        <a asp-controller="Question" asp-action="List" asp-route-categoryId="@item.Id" asp-route-categoryName="@item.Name" class="list-group-item">@item.Name</a>
    }

</div>